{
  "name": "com.carloshglez.asteroids",
  "displayName": "Chronoverse",
  "version": "1.1.0",
  "description": "Project based on \"reacteroids\" game (https://github.com/chriz001/Reacteroids) ported to web and mobile",
  "main": "index.html",
  "scripts": {
    "clean": "rimraf www/js/bundle.js",
    "build-dev": "npm run clean && SET NODE_ENV=develop & webpack --config webpack.config.js",
    "build-prod": "npm run clean && SET NODE_ENV=production & webpack --config webpack.config.prod.js",
    "build-apk": "cordova build android",
    "start": "./node_modules/.bin/webpack-dev-server",
    "lint": "eslint src",
    "lint-report": "./node_modules/.bin/eslint -f html src > lint-report.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.houston.entsvcs.net/carlos-horacio-gonzalez-gordillo/react-game.git"
  },
  "author": "Carlos Gonzalez",
  "license": "ISC",
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-icons": "^2.2.7",
    "react-notify-toast": "^0.3.2",
    "cordova-android": "^6.3.0",
    "cordova-plugin-whitelist": "^1.3.3"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "android"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.16.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.9.0",
    "eslint-plugin-react": "^7.4.0",
    "file-loader": "^1.1.5",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "redbox-react": "1.5.0",
    "rimraf": "^2.6.2",
    "source-map": "^0.6.1",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3"
  }
}